@page "/virtualization"

<PageHeader Value="Virtualization Test" />

<MudText Typo="Typo.h3" GutterBottom="true" Class="d-none d-md-flex mb-6">Virtualization Test</MudText>

<MudGrid>
    <Virtualize Context="Person" Items="@People" OverscanCount="8">
    <MudItem sm="6" md="4" lg="4" xl="3" xxl="2">
        <MudCard Class="mx-4">
            <MudCardHeader>
                <MudText Typo="Typo.h5">Person @Person.Name</MudText>
            </MudCardHeader>
            <MudCardContent>
                <MudText>Age: @Person.Age</MudText>
            </MudCardContent>
        </MudCard>
    </MudItem>
    </Virtualize>
</MudGrid>

@code {
    public List<Person> People = Enumerable.Range(1, 30000).Select(x => new Person(x.ToString(), x % 60)).ToList();

    public class Person
    {
        public Person(string name, int age)
        {
            Name = name;
            Age = age;
        }
        public string Name { get; }
        public int Age { get; }
    }
}