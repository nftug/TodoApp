@page "/virtualization"

<PageHeader Value="Virtualization Test" />

<MudText Typo="Typo.h3" GutterBottom="true" Class="d-none d-md-flex mb-6">Virtualization Test</MudText>

<div class="row align-items-start">
    <Virtualize Items="@People" OverscanCount="20">
        <div class="col-6 mb-4">
            <MudCard>
                <MudCardHeader>
                    <MudText Typo="Typo.h5">Person @context.Name</MudText>
                </MudCardHeader>
                <MudCardContent>
                    <MudText>Age: @context.Age</MudText>
                </MudCardContent>
            </MudCard>
        </div>
    </Virtualize>
</div>