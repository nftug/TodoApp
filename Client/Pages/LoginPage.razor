@page "/login"
@using Client.Components.Common

<PageTitle>ログイン</PageTitle>

<MudContainer Class="my-8 py-8" MaxWidth="MaxWidth.ExtraSmall">
    <MudText Typo="Typo.h4" GutterBottom="true" class="mb-5">ログイン</MudText>

    <EditForm Model="@LoginModel" OnValidSubmit="SubmitAsync">
        <DataAnnotationsValidator />

        <MudTextField Class="my-2" FullWidth="true" Label="Email" @bind-Value="@LoginModel.Email"
            For="@(() => LoginModel.Email)" />
        <MudTextField Class="my-2" FullWidth="true" Label="パスワード" @bind-Value="@LoginModel.Password"
            For="@(() => LoginModel.Password)" InputType="InputType.Password" />

        <MudButton Class="mt-7" Variant="Variant.Filled" StartIcon="@Icons.Filled.Login"
            Color="Color.Primary" FullWidth="true" ButtonType="ButtonType.Submit"
            Disabled="@_isLoading">
            ログイン
            <ButtonLoadingOverlay Visible="@_isLoading" />
        </MudButton>
    </EditForm>
</MudContainer>
