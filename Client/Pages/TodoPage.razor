@page "/todo"
@attribute [Authorize]

@using Client.Components.Todos

<PageBase Title="Todo List">
    <ChildContent>
        <MudText Typo="Typo.h4" GutterBottom="true" Class="d-none d-md-flex mb-6">Todo List</MudText>

        @if (_table?.Data != null)
        {
            <MudText Class="mb-6">@(_table.Data.TotalItems) 個の項目が見つかりました。</MudText>
        }

        <TodoTable @ref="@_table" Parameter="@_parameter" OnLoaded="StateHasChanged" />

        <TodoCreateFab OnCreateItem="@(() => _table!.RefreshTable())" />
    </ChildContent>

    <FooterContent>
        <TodoFooter />
    </FooterContent>
</PageBase>