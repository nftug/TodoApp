@page "/login"
@inherits MyComponentBase

@using Client.Models

<div class="mat-layout-grid">
    <div class="mat-layout-grid-inner">
        <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12 mat-layout-grid-align-center">
            <h3>Login</h3>
        </div>
        <EditForm Model="@LoginCommand" OnValidSubmit="SubmitAsync"
            class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
            <DataAnnotationsValidator />
            <div class="mat-layout-grid-inner">
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                    <MatTextField FullWidth="true" Label="Email" @bind-Value="@LoginCommand.Email" />
                    <ValidationMessage For="@(() => LoginCommand.Email)" />
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12">
                    <MatTextField FullWidth="true" Label="Password" @bind-Value="@LoginCommand.Password" Type="password" />
                    <ValidationMessage For="@(() => LoginCommand.Password)" />
                </div>
                <div class="mat-layout-grid-cell mat-layout-grid-cell-span-12 mat-layout-grid-align-right">
                    <MatButton Label="Login" Outlined="true" Type="submit" />
                </div>
            </div>
            <p style="color:red;">@ErrorMessage</p>
        </EditForm>
    </div>
</div>